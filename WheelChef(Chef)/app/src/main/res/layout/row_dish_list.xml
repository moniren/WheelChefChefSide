<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/row_dish_list"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/color_primary_dark"
android:layout_margin="10dp"
>

    <com.pkmmte.view.CircularImageView
        android:id = "@+id/dish_list_dish_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/unknown_person"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        app:border="false"
        app:shadow="false" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@id/dish_list_dish_photo"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/dish_list_dishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5,000"
        android:textSize="15dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dish_list_dishUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unit price"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/dish_list_dishQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" X Qty" />

        </LinearLayout>
            <TextView
                android:id="@+id/dish_list_dishTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="total"
                android:layout_alignParentRight = "true"
                android:textSize="15dp"/>


    </RelativeLayout>

</LinearLayout>


</RelativeLayout>
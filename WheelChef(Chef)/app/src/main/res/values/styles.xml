<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>-->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@android:color/background_light</item>
        <item name="background">@color/color_primary</item>
    </style>

    <style name="FlatWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">@color/shadow_transparent</item>
        <item name="rd_cornerRadius">4dp</item>
    </style>

    <style name="FloatingWaveColorActionButton" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">@color/color_primary_dark</item>
        <item name="fab_backgroundColor">@color/color_primary</item>
        <item name="fab_elevation">4dp</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>

    <style name="CustomEditText"  parent="Material.Widget.EditText">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorHint">@color/abc_secondary_text_material_dark</item>
        <item name="et_dividerColor">@drawable/color_divider</item>
        <item name="et_labelTextColor">@drawable/color_label</item>
        <item name="et_supportTextErrorColor">#FFFF0000</item>
        <item name="et_dividerErrorColor">#FFFF0000</item>
    </style>

    <style name="CustomCheckBoxDrawable" parent="Material.Drawable.CheckBox">
        <item name="cbd_strokeColor">@drawable/color_switch</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="CustomSpinner" parent="Material.Widget.Spinner">
        <item name="rd_style">@style/Material.Drawable.Ripple.Wave</item>
        <item name="spn_labelEnable">true</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/color_accent</item>
        <item name="android:popupBackground">@color/background_material_dark</item>
    </style>

    <style name="CustomSpinnerNoArrow" parent="CustomSpinner">
        <item name="spn_arrowSize">0dp</item>
        <item name="spn_popupItemAnimation">@anim/abc_fade_in</item>
    </style>

    <style name="CustomSpinnerItem" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/shadow_transparent</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

</resources>
